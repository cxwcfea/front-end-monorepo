{
  "compilerOptions": {
    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
    "declarationDir": "../dist/types", /* '.d.ts' 文件输出目录 */
    "jsx": "preserve",
    "types": ["vite/client"],
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*.*",
    "src/shims-vue.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": true
}
